<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Dramady</title>
	<link rel="stylesheet" href="/css/bulma.min.css">
	<link rel="stylesheet" href="/css/layout.css">
	<script src="https://kit.fontawesome.com/2ef5d5f5df.js" crossorigin="anonymous"></script>
</head>
<body>
	
	<div id="entire-page" class="container">
        <header class="is-size-1 has-text-centered">
            Dramady
        </header>

		
		<nav class="navbar has-background-light" role="navigation" aria-label="main navigation">

			<div class="navbar-brand">
                <a class="navbar-item" href="/">Home</a>
                <!--<a class="navbar-item" href="/extraFeatures">Extras(To Be Added)</a>-->
				<a role="button" class="navbar-burger burger" aria-label="menu" aria-expanded="false" data-target="navbar">
					<span aria-hidden="true"></span>
					<span aria-hidden="true"></span>
					<span aria-hidden="true"></span>
				</a>
			</div>

			<div id="navbar" class="navbar-menu">
				
				<div class="navbar-start">
                    <a class="navbar-item" href="/movies/top250">Top 250 movies</a>
                    <a class="navbar-item" href="/movies/trendingMovies">Trending Now</a>
					{{#if session.accountId}}
						<a class="navbar-item" href="/movies/favourites">Favourites</a>
						<a class="navbar-item" href="/movies/watchlist">Watchlist</a>
					{{/if}}
				</div>
                
				<div class="navbar-end">
					<div class="navbar-item has-dropdown is-hoverable">
						<a class="navbar-link">
							More
						</a>

						<div class="navbar-dropdown">
							<a class="navbar-item" href="/accounts">Accounts</a>
							<a class="navbar-item" href="http://localhost:8080">SPA</a>
						</div>
                	</div>
					<div class="navbar-item">
						<div class="buttons">
							{{#if session.accountId}}
                                <a class="button is-primary" href="/accounts/sign-out">Sign out</a>
							{{else}}
								<a class="button is-primary" href="/accounts/sign-up">Sign up</a>
								<a class="button is-dark" href="/accounts/sign-in">Sign in</a>
							{{/if}}
						</div>
					</div>
				</div>
				
			</div>
		</nav>
		
		<main>{{{body}}}</main>
		
		<footer class="footer">
