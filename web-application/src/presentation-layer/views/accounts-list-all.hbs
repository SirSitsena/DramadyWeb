<div class="content">
<h1 style="color: white;">All accounts</h1>
{{#if errors.length}}
	<div class="notification is-danger">
        <p><strong>An issue appeared: </strong></p>
        <ul>
            {{#each errors}}
                <li>{{this}}</li> 
            {{/each}}
        </ul>
    </div>
{{else}}
	
	{{#if accounts.length}}
		<ul>
			{{#each accounts}}
				<li><a href="/accounts/{{dataValues.username}}">{{dataValues.username}}</a></li>
			{{/each}}
		</ul>
	{{else}}
		<p>No accounts exist yet.</p>
	{{/if}}
	
{{/if}}
</div>