<div class="content" style="color:white;">
<h1 style="color:white;">Watchlist <i class="fa fa-eye" aria-hidden="true"></i></h1>
{{#if errors.length}}
	<div class="notification is-danger">
        <p><strong>An issue appeared: </strong></p>
        <ul>
            {{#each errors}}
                <li>{{this}}</li> 
            {{/each}}
        </ul>
    </div>
{{else}}
	{{#if movies.length}}
		<ul>
			{{#each movies}}
                <div class="box">
                    {{movieTitle}}
                </div>

			{{/each}}
		</ul>
	{{else}}
        <div class="box">
            <p>Your watchlist seems to be empty...</p>
        </div>
	{{/if}}
{{/if}}
</div>